@{
    Layout = "MainLayout";
}

<main class="main-content">

    <section id="dashboard" class="content-section active">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Panel de Control</h2>
                <p class="section-subtitle">Monitorea el estado de tus encuestas en tiempo real</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-poll-h"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">12</h3>
                        <p class="stat-label">Encuestas Activas</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">348</h3>
                        <p class="stat-label">Respuestas Totales</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">6</h3>
                        <p class="stat-label">Encuestadores Activos</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">225</h3>
                        <p class="stat-label">Estudiantes Participantes</p>
                    </div>
                </div>
            </div>

            <!-- Encuestas mas recientes-->
            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3 class="card-title">Encuestas Recientes</h3>
                        <button class="btn btn-link">Ver todas</button>
                    </div>
                    <div class="survey-list">
                        <div class="survey-item">
                            <div class="survey-info">
                                <h4 class="survey-name">Satisfacción Cafetería</h4>
                                <p class="survey-meta">Creada: 2 días • 45 respuestas</p>
                            </div>
                            <div class="survey-status">
                                <span class="status-badge active">Activa</span>
                                <button class="btn-action">
                                    <i class="fas fa-chart-pie"></i>
                                </button>
                            </div>
                        </div>
                        <div class="survey-item">
                            <div class="survey-info">
                                <h4 class="survey-name">Limpieza Instalaciones</h4>
                                <p class="survey-meta">Creada: 5 días • 78 respuestas</p>
                            </div>
                            <div class="survey-status">
                                <span class="status-badge active">Activa</span>
                                <button class="btn-action">
                                    <i class="fas fa-chart-pie"></i>
                                </button>
                            </div>
                        </div>
                        <div class="survey-item">
                            <div class="survey-info">
                                <h4 class="survey-name">Calidad Biblioteca</h4>
                                <p class="survey-meta">Creada: 1 semana • 92 respuestas</p>
                            </div>
                            <div class="survey-status">
                                <span class="status-badge completed">Finalizada</span>
                                <button class="btn-action">
                                    <i class="fas fa-chart-pie"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-card">
                    <div class="card-header">
                        <h3 class="card-title">Actividad en Tiempo Real</h3>
                        <div class="live-indicator">
                            <span class="live-dot"></span>
                            En vivo
                        </div>
                    </div>
                    <div class="activity-feed">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="activity-content">
                                <p>Nueva respuesta en <strong>Satisfacción Cafetería</strong></p>
                                <span class="activity-time">Hace 2 minutos</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-play"></i>
                            </div>
                            <div class="activity-content">
                                <p>María González inició aplicación de encuesta</p>
                                <span class="activity-time">Hace 5 minutos</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-plus"></i>
                            </div>
                            <div class="activity-content">
                                <p>Nueva encuesta creada: <strong>Evaluación Deportes</strong></p>
                                <span class="activity-time">Hace 15 minutos</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>