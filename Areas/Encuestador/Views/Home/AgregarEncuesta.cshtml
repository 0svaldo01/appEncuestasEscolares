@model appEncuestasEscolares.Areas.Encuestador.Models.ViewModels.CrearEncuestasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "MainLayout";
}


    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Crear Nueva Encuesta</h2>
            <p class="section-subtitle">Diseña una encuesta personalizada para tu institución</p>
        </div>

        <div class="form-container">

            <form method="post" action="~/Encuestador/Home/AgregarEncuesta" class="survey-form">
                <div class="form-group">
                    <label for="survey-name" class="form-label">Nombre de la Encuesta</label>
                    <input type="text" id="survey-name" class="form-input" asp-for="Titulo" placeholder="Ej: Satisfacción con la Cafetería" required>
                </div>

                <div class="form-group">
                    <label for="survey-description" class="form-label">Descripción</label>
                    <textarea id="survey-description" class="form-textarea" asp-for="Descripcion" placeholder="Describe el objetivo de esta encuesta..." required></textarea>
                </div>
           

                <div class="form-actions">
                    <label style="color:red">@Html.ValidationSummary()</label>
                    <button type="submit" class="btn btn-primary">Crear Encuesta</button>
                </div>
            </form>
        </div>
    </div>
